@page
@model RPDemo.Pages.Orders.ListModel
@{
}

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Date</th>
            <th>OrderName</th>
            <th>Food</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>To Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Order)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.OrderName</td>
                <td>@order.FoodTitle</td>
                <td>@order.Quantity</td>
                <td>@order.Total.ToString("C")</td>
                <td colspan="2">
                    <a asp-page="./Display" asp-route-id="@order.Id" class="btn btn-info">View Order</a>
                </td>
            </tr>
        }
    </tbody>
</table>
