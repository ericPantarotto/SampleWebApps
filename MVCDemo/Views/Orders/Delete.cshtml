@model DataLibraryRepo.Models.OrderModel
@{
    ViewData["Title"] = "Delete";
}


@if (Model is null)
{
    <h4>The requested record was not found</h4>
}else
{
    <div class ="h4">
        Are you sure you want to delete the order ?
    </div>
    <div class ="h4">
        @Model.OrderName: placed on @Model.OrderDate  
    </div>
    <form asp-action="Delete">
        <input type="submit" value="Delete Order" class="btn btn-danger"/>
    </form>
}